    "version": "0.2.0",
    "configurations": [

        {
            "name": "Flask: run",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config:python.pythonPath}",
            "module": "flask",
            "cwd": "${workspaceFolder}/frenchtvdownload",
            "env": {
                "FLASK_APP":"flaskr",
                "FLASK_ENV":"development"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ]
        },
        {
            "name": "Flask: init-db",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "pythonPath": "${config:python.pythonPath}",
            "module": "flask",
            "cwd": "${workspaceFolder}/frenchtvdownload",
            "env": {
                "FLASK_APP":"flaskr",
                "FLASK_ENV":"development"
            },
            "args": [
                "init-db",
            ]
        },
        {
            "name": "Python: Current File (Integrated Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            // "args": [
            //     "-o", ".", "-b", "https://www.france.tv/france-5/c-dans-l-air/"
            // ],
            // "args": [
            //     "-o", ".", "-b", "https://www.france.tv/france-5/c-dans-l-air/833493-c-dans-l-air.html"
            // ],
            // "args": [
            //     "-o", ".", "-b", "https://www.france.tv/france-2/nicolas-le-floch/769463-le-noye-du-grand-canal.html"
            // ],
            "args": [
                "-o", ".", "-b", "--keepManifest", "--keepMetaData", "https://www.arte.tv/fr/videos/067866-001-A/le-charbon-1-2/"
            ],
            // "args": [
            //     "-o", ".", "-b", "--keepManifest", "--listProfiles", "https://www.arte.tv/fr/videos/075596-000-A/mission-verite-le-new-york-times-et-donald-trump-1-4/"
            // ],
            // "args": [
            //     "-o", ".", "-b", "--keepManifest", "--keepMetaData", "https://www.tf1.fr/tmc/quotidien-avec-yann-barthes/videos/quotidien-premiere-partie-25-octobre-2018.html"
            // ],
            // "args": [
            //     "-o", ".", "-b", "--keepManifest", "--keepMetaData", "http://lcp.fr/emissions/290321-emission-speciale"
            // ],
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Attach",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "localhost"
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "console": "integratedTerminal",
            "args": [
                "runserver",
                "--noreload",
                "--nothreading"
            ],
            "django": true
        },
        {
            "name": "Python: Current File (External Terminal)",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "externalTerminal"
        }
    ]
}