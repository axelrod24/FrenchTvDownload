repo=TV
dstFolder=~/Dropbox/$repo
if [ ! -d "$dstFolder" ]; then
    mkdir $dstFolder
fi

localFolder=$(dirname $0)
cd $localFolder

export VIRTUAL_ENV=$PWD/.venv
for var in "$@"
do
    .venv/bin/python3 ./frenchtvdownload/downloadStream.py -o $dstFolder -i url --saveMetadata --repo $repo $var
done
